# Milvus Configuration
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_USER=
MILVUS_PASSWORD=

# MinIO Configuration (Object Storage)
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_HOST=localhost
MINIO_PORT=9010

# Redis Configuration (Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Docker Volume Directory
DOCKER_VOLUME_DIRECTORY=./volumes

# API Keys (for external services)
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Application Settings
DEBUG=True
LOG_LEVEL=INFO

# Web UI Ports
ATTU_PORT=3000
GRAFANA_PORT=3001
PROMETHEUS_PORT=9090

# Performance Settings
MILVUS_POOL_SIZE=10
MILVUS_TIMEOUT=60

# Dataset Paths
TEXT_DATASET_PATH=./datasets/text/
IMAGE_DATASET_PATH=./datasets/images/
VECTOR_DATASET_PATH=./datasets/vectors/

# Model Settings
DEFAULT_TEXT_MODEL=sentence-transformers/all-MiniLM-L6-v2
DEFAULT_IMAGE_MODEL=clip-ViT-B-32
EMBEDDING_DIMENSION=384

# Monitoring
ENABLE_MONITORING=True
METRICS_PORT=8000 